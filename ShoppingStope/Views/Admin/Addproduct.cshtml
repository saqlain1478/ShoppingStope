
@{
    Layout = null;
}

<div class="contact-form">
    <h2 class="title text-center">Add Product</h2>
    <div class="status alert alert-success" style="display: none"></div>
    <form id="main-contact-form" class="contact-form row" name="contact-form" method="post">
        <div class="form-group col-md-6">
            <label>Name</label><br />
            <input type="text" name="name" class="form-control" required="required" placeholder="Name"><br />
            <label>Name</label><br />
            <input type="email" name="email" class="form-control" required="required" placeholder="price"><br />
            <label>Name</label><br />
            <input type="checkbox" name="subject" class="form-control" required="required" placeholder="Category"><br />
            <label>Name</label><br />
            <textarea name="message" id="message" required="required" class="form-control" rows="8" placeholder="Your Message Here"></textarea><br />
            <input type="submit" name="submit" class="btn btn-primary pull-right" value="Save">
            <input type="file" id="postedfile" onchange="loadFile(event)" />

        </div>
        <div class="form-group col-md-2">
            <input type="image" id="img" />
        </div>
    </form>
</div>
